rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uidField) {
      return isSignedIn() && request.auth.uid == uidField;
    }

    function hasRole(role) {
      return isSignedIn() && request.auth.token.role == role;
    }

    function isVerifierOrAdmin() {
      return hasRole('verifier') || hasRole('admin');
    }

    match /farmers/{farmerId} {
      allow read, write: if isOwner(resource.data.authUid) || isOwner(request.resource.data.authUid) || isVerifierOrAdmin();
    }

    match /mrv_estimates/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.farmerId is string;
      allow update, delete: if false;
    }

    match /voice_sessions/{sessionId} {
      allow read, write: if isSignedIn();
    }

    match /evidence_uploads/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.farmerId is string;
      allow update: if isVerifierOrAdmin();
      allow delete: if false;
    }

    match /soil_tests/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.farmerId is string;
      allow update, delete: if false;
    }

    match /audit_trail/{docId} {
      allow read: if isVerifierOrAdmin();
      allow create: if isSignedIn() && request.resource.data.farmerId is string;
      allow update, delete: if false;
    }

    match /verification_reviews/{docId} {
      allow read: if isSignedIn();
      allow create: if isVerifierOrAdmin() && request.resource.data.farmerId is string;
      allow update, delete: if false;
    }
  }
}
